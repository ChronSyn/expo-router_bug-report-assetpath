{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Screens/*": ["src/screens/*"],
      "@Assets/*": ["assets/*"],
      "@Themes/*": ["src/theming/*"]
    }
  }
}
